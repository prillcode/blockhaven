# BlockHaven AWS Deployment Configuration
# Copy this file to .env.aws and fill in your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=bgrweb

# CloudFormation Stack Name
STACK_NAME=blockhaven-mc

# S3 Backup Bucket (must already exist)
S3_BUCKET=blockhaven-mc-backups

# EC2 Key Pair Name (must exist in AWS)
# Create one at: https://console.aws.amazon.com/ec2/v2/home#KeyPairs:
KEY_PAIR_NAME=your-key-pair-name

# Path to your SSH private key file (for stop-server.sh backup)
SSH_KEY_FILE=~/.ssh/your-key.pem

# Server Configuration
RCON_PASSWORD=change_this_to_a_secure_password
SERVER_OPS=PRLLAGER207

# Instance Configuration
INSTANCE_TYPE=t3a.large
VOLUME_SIZE=50
USE_ELASTIC_IP=true
USE_SPOT_INSTANCE=false

# Security - Restrict SSH access (recommended)
# Use your IP: curl -s ifconfig.me
# Format: x.x.x.x/32 for single IP, 0.0.0.0/0 for any (less secure)
ALLOWED_SSH_CIDR=0.0.0.0/0

# Git Repository (must be public, or set up deploy key for private)
GIT_REPO_URL=https://github.com/prillcode/blockhaven.git
GIT_BRANCH=main

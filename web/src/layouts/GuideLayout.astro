---
/**
 * Guide layout with sidebar navigation for docs-style pages
 */
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  currentPage?: string;
}

const { title, description = 'BlockHaven Players Guide', currentPage = '' } = Astro.props;
const currentPath = Astro.url.pathname;

const guidePages = [
  { href: '/guide', label: 'Quick Start', id: 'quick-start' },
  { href: '/guide/basics', label: 'Minecraft Basics', id: 'basics' },
  { href: '/guide/land-claims', label: 'Land Claims', id: 'land-claims' },
  { href: '/guide/economy', label: 'Jobs & Economy', id: 'economy' },
  { href: '/guide/worlds', label: 'Worlds & Travel', id: 'worlds' },
];
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/server-icon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={`${title} | BlockHaven Guide`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <title>BlockHaven | {title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-bg-dark text-text-light">
    <Header currentPath={currentPath} />
    <main class="flex-1">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="lg:grid lg:grid-cols-[250px_1fr] lg:gap-8">
          <!-- Sidebar Navigation -->
          <aside class="hidden lg:block">
            <nav class="sticky top-24 space-y-1">
              <h3 class="text-sm font-semibold text-primary-gold mb-4 uppercase tracking-wider">
                Players Guide
              </h3>
              {guidePages.map((page) => (
                <a
                  href={page.href}
                  class:list={[
                    'block px-3 py-2 rounded-lg text-sm transition-colors',
                    currentPage === page.id
                      ? 'bg-primary-gold/10 text-primary-gold font-medium'
                      : 'text-text-muted hover:text-text-light hover:bg-secondary-stone/10',
                  ]}
                >
                  {page.label}
                </a>
              ))}
            </nav>
          </aside>

          <!-- Mobile Navigation -->
          <div class="lg:hidden mb-6">
            <label class="text-sm font-semibold text-primary-gold mb-2 block uppercase tracking-wider">
              Players Guide
            </label>
            <select
              id="guide-nav-mobile"
              class="w-full bg-secondary-stone/20 border border-secondary-stone/30 rounded-lg px-4 py-2 text-text-light"
            >
              {guidePages.map((page) => (
                <option value={page.href} selected={currentPage === page.id}>
                  {page.label}
                </option>
              ))}
            </select>
          </div>

          <!-- Main Content -->
          <article class="prose prose-invert max-w-none">
            <slot />
          </article>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<script>
  const select = document.getElementById('guide-nav-mobile') as HTMLSelectElement;
  select?.addEventListener('change', () => {
    window.location.href = select.value;
  });
</script>

<style>
  @reference "../styles/global.css";

  /* Custom prose styles for guide content */
  .prose {
    color: var(--color-text-light);
    line-height: 1.625;
  }
  .prose h1 {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--color-primary-gold);
    margin-bottom: 1.5rem;
  }
  @media (min-width: 640px) {
    .prose h1 {
      font-size: 2.5rem;
    }
  }
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-light);
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid rgba(127, 127, 127, 0.2);
  }
  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-light);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  .prose h4 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-light);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .prose p {
    color: var(--color-text-muted);
    margin-bottom: 1.25rem;
    line-height: 1.625;
  }
  .prose ul {
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    margin-left: 1.5rem;
    list-style-type: disc;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .prose ol {
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    margin-left: 1.5rem;
    list-style-type: decimal;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  .prose li {
    padding-left: 0.5rem;
    line-height: 1.625;
  }
  .prose li::marker {
    color: var(--color-primary-gold);
  }
  .prose code {
    color: var(--color-primary-gold);
    background-color: rgba(127, 127, 127, 0.2);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
  .prose pre {
    background-color: rgba(127, 127, 127, 0.2);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }
  .prose pre code {
    background-color: transparent;
    padding: 0;
  }
  .prose a {
    color: var(--color-accent-diamond);
    text-decoration: underline;
    transition: color 0.15s;
  }
  .prose a:hover {
    color: var(--color-primary-gold);
  }
  .prose strong {
    color: var(--color-text-light);
    font-weight: 600;
  }
  .prose blockquote {
    border-left: 4px solid rgba(212, 160, 23, 0.5);
    padding-left: 1rem;
    font-style: italic;
    color: var(--color-text-muted);
    margin: 1.5rem 0;
  }
  .prose table {
    width: 100%;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }
  .prose th {
    text-align: left;
    padding: 0.75rem 1rem;
    background-color: rgba(127, 127, 127, 0.2);
    color: var(--color-text-light);
    font-weight: 500;
  }
  .prose td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid rgba(127, 127, 127, 0.1);
    color: var(--color-text-muted);
  }
  .prose section {
    margin-bottom: 2rem;
  }
</style>

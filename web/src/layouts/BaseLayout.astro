---
/**
 * Base layout for all pages
 * Provides consistent page structure with Header, Footer, and global styles
 */
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'BlockHaven - A family-friendly Minecraft server' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/server-icon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={`${title} | BlockHaven`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <title>BlockHaven | {title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-bg-dark text-text-light">
    <Header currentPath={currentPath} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

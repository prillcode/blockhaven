# BlockHaven Web - Environment Variables
# Copy this to .env and fill in your values

# ===========================================
# Email Service (Resend) - Required for forms
# ===========================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Admin email for receiving form submissions
ADMIN_EMAIL=admin@bhsmp.com

# ===========================================
# Minecraft Server Details
# ===========================================
MC_SERVER_IP=play.bhsmp.com
MC_SERVER_PORT=25565
MC_BEDROCK_PORT=19132

# ===========================================
# Optional: Discord Integration
# ===========================================
# Webhook URL for server notifications
DISCORD_WEBHOOK_URL=

# ===========================================
# Optional: GitHub OAuth (Phase 2 - Admin Dashboard)
# ===========================================
# Create OAuth app at https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# Optional: AWS Integration (Phase 2 - Server Control)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
